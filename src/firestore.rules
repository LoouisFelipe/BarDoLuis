rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // CFO & CTO: Apenas usuários autenticados (Staff) podem operar o sistema.
    function isStaff() {
      return request.auth != null;
    }

    // Permissões para o perfil do usuário
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Gestão de Produtos: Todos veem (para o cardápio), Staff edita.
    match /products/{productId} {
      allow read: if true;
      allow write: if isStaff();
    }

    // Gestão Operacional: Clientes e Fornecedores
    match /customers/{customerId} {
      allow read, write: if isStaff();
    }
    match /suppliers/{supplierId} {
      allow read, write: if isStaff();
    }

    // Movimentação Financeira: Comandas, Compras e Transações
    match /open_orders/{orderId} {
      allow read, write: if isStaff();
    }
    match /purchases/{purchaseId} {
      allow read, write: if isStaff();
    }
    match /transactions/{transactionId} {
      allow read, write: if isStaff();
    }

    // Bloqueio total por padrão para qualquer outra coleção não mapeada.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}