rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üé© CEO MODE: Autoridade m√°xima e acesso total para o seu UID
    function isCEO() {
      return request.auth != null && request.auth.uid == "o0FzqC1oYoYYwjgJXbbgL4QoCe42";
    }

    // Membros da equipe autenticados
    function isStaff() {
      return request.auth != null;
    }

    // Gest√£o de Usu√°rios
    match /users/{userId} {
      // CEO tem controle total. Staff pode listar para gest√£o de cargos.
      allow read: if isCEO() || isStaff();
      allow write: if isCEO() || (isStaff() && request.auth.uid == userId);
    }

    // Produtos: Aberto para leitura (card√°pio), Staff edita.
    match /products/{productId} {
      allow read: if true;
      allow write: if isCEO() || isStaff();
    }

    // Gest√£o Operacional: Clientes e Fornecedores
    match /customers/{customerId} {
      allow read, write: if isCEO() || isStaff();
    }
    match /suppliers/{supplierId} {
      allow read, write: if isCEO() || isStaff();
    }

    // Movimenta√ß√£o Financeira: Comandas, Compras e Transa√ß√µes
    match /open_orders/{orderId} {
      allow read, write: if isCEO() || isStaff();
    }
    match /purchases/{purchaseId} {
      allow read, write: if isCEO() || isStaff();
    }
    match /transactions/{transactionId} {
      allow read, write: if isCEO() || isStaff();
    }

    // Regra de Seguran√ßa Final: Caso n√£o caia em nenhuma regra espec√≠fica, CEO ainda tem acesso.
    match /{document=**} {
      allow read, write: if isCEO();
    }
  }
}