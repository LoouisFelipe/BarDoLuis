{
  "entities": {
    "Supplier": {
      "title": "Supplier",
      "type": "object",
      "description": "Represents a business supplier for bar stock.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "address": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Inventory products (beers, doses, portions).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "stock": { "type": "number" },
        "costPrice": { "type": "number" },
        "unitPrice": { "type": "number" },
        "saleType": { "type": "string", "enum": ["unit", "dose", "portion", "weight", "service"] }
      },
      "required": ["id", "name", "category", "saleType"]
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "description": "Customers managed for history and credit (Fiado).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contact": { "type": "string" },
        "balance": { "type": "number" },
        "creditLimit": { "type": "number" }
      },
      "required": ["id", "name", "balance"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Active bar tabs/tables.",
      "properties": {
        "id": { "type": "string" },
        "displayName": { "type": "string" },
        "customerId": { "type": "string" },
        "items": { "type": "array" },
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["open", "closed"] }
      },
      "required": ["id", "displayName", "status"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Financial ledger (sales, expenses, payments).",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["sale", "expense", "payment"] },
        "total": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string" }
      },
      "required": ["id", "type", "total", "timestamp"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/suppliers/{supplierId}": {
      "schema": { "$ref": "#/entities/Supplier" },
      "description": "Collection of suppliers."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Inventory items."
    },
    "/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Client list and balances."
    },
    "/open_orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Active tables and tabs."
    },
    "/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Financial records."
    }
  }
}
