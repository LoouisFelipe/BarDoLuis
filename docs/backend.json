
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Produtos do estoque (cervejas, doses, petiscos).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "category": { "type": "string" },
        "costPrice": { "type": "number" },
        "unitPrice": { "type": "number" },
        "stock": { "type": "number" },
        "saleType": { "type": "string", "enum": ["unit", "dose", "service"] }
      }
    },
    "Customer": {
      "title": "Customer",
      "description": "Clientes do bar (Fieis e Fiado).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "balance": { "type": "number" },
        "contact": { "type": "string" }
      }
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Movimentações financeiras (Vendas, Despesas, Pagamentos).",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["sale", "expense", "payment"] },
        "total": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Coleção de produtos."
    },
    "/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Coleção de clientes."
    },
    "/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Histórico financeiro."
    },
    "/open_orders/{orderId}": {
      "schema": "object",
      "description": "Comandas em aberto."
    },
    "/users/{userId}": {
      "schema": "object",
      "description": "Perfis de usuários do sistema."
    }
  }
}
