{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "System user with roles and permissions.",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["admin", "cashier", "waiter"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role"]
    },
    "Supplier": {
      "title": "Supplier",
      "type": "object",
      "description": "Represents a business supplier for bar stock.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "address": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Inventory products (beers, doses, portions).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "stock": { "type": "number" },
        "costPrice": { "type": "number" },
        "unitPrice": { "type": "number" },
        "saleType": { "type": "string", "enum": ["unit", "dose", "portion", "weight", "service"] },
        "lowStockThreshold": { "type": "number" }
      },
      "required": ["id", "name", "category", "saleType"]
    },
    "GameModality": {
      "title": "Game Modality",
      "type": "object",
      "description": "Entertainment modalities (Bixo, Bingo, Machines).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "unitPrice": { "type": "number", "description": "Suggested entry value" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name"]
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "description": "Customers managed for history and credit (Fiado).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contact": { "type": "string" },
        "balance": { "type": "number" },
        "creditLimit": { "type": "number" }
      },
      "required": ["id", "name", "balance"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Active bar tabs/tables.",
      "properties": {
        "id": { "type": "string" },
        "displayName": { "type": "string" },
        "customerId": { "type": "string" },
        "items": { "type": "array" },
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["open", "closed"] }
      },
      "required": ["id", "displayName", "status"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Financial ledger (sales, expenses, payments).",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["sale", "expense", "payment"] },
        "total": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string" },
        "expenseCategory": { "type": "string" },
        "recurringExpenseId": { "type": "string" }
      },
      "required": ["id", "type", "total", "timestamp"]
    },
    "RecurringExpense": {
      "title": "Recurring Expense",
      "type": "object",
      "description": "Definition for fixed monthly costs.",
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "amount": { "type": "number" },
        "category": { "type": "string" },
        "dayOfMonth": { "type": "number" },
        "startDate": { "type": "string", "format": "date" },
        "active": { "type": "boolean" }
      },
      "required": ["id", "description", "amount", "category"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{uid}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "System users and roles."
    },
    "/suppliers/{supplierId}": {
      "schema": { "$ref": "#/entities/Supplier" },
      "description": "Collection of suppliers."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Inventory items (Bar only)."
    },
    "/game_modalities/{modalityId}": {
      "schema": { "$ref": "#/entities/GameModality" },
      "description": "Entertainment modalities."
    },
    "/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Client list and balances."
    },
    "/open_orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Active tables and tabs."
    },
    "/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Financial records."
    },
    "/recurring_expenses/{expenseId}": {
      "schema": { "$ref": "#/entities/RecurringExpense" },
      "description": "Master list of fixed monthly costs."
    }
  }
}