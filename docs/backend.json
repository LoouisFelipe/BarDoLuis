
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Produtos do estoque (cervejas, doses, petiscos).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "costPrice": { "type": "number" },
        "unitPrice": { "type": "number" },
        "stock": { "type": "number" },
        "saleType": { "type": "string", "enum": ["unit", "dose", "service", "portion", "weight"] },
        "lowStockThreshold": { "type": "number" }
      }
    },
    "Customer": {
      "title": "Customer",
      "description": "Clientes do bar (Fieis e Fiado).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "balance": { "type": "number" },
        "contact": { "type": "string" },
        "creditLimit": { "type": "number" }
      }
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Movimentações financeiras (Vendas, Despesas, Pagamentos).",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["sale", "expense", "payment"] },
        "total": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string" },
        "description": { "type": "string" },
        "customerId": { "type": "string" }
      }
    },
    "User": {
      "title": "User Profile",
      "description": "Perfis de usuários do sistema.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["admin", "cashier", "waiter"] }
      }
    },
    "OpenOrder": {
      "title": "Open Order",
      "description": "Comandas em aberto no movimento.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "customerId": { "type": "string" },
        "status": { "type": "string", "enum": ["open", "closed"] },
        "total": { "type": "number" },
        "items": { "type": "array", "items": { "type": "object" } }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Estoque de produtos."
    },
    "/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Base de clientes fiéis."
    },
    "/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Histórico financeiro completo."
    },
    "/open_orders/{orderId}": {
      "schema": { "$ref": "#/entities/OpenOrder" },
      "description": "Comandas ativas no bar."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Perfis administrativos e equipe."
    }
  }
}
