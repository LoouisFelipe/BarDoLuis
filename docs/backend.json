{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Bens de consumo e servi√ßos (cervejas, doses, petiscos).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "costPrice": { "type": "number" },
        "unitPrice": { "type": "number" },
        "stock": { "type": "number" },
        "saleType": { "type": "string", "enum": ["unit", "dose", "service", "portion", "weight"] },
        "lowStockThreshold": { "type": "number" }
      }
    },
    "Customer": {
      "title": "Customer",
      "description": "Fieis e devedores (Fiado).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "balance": { "type": "number" },
        "contact": { "type": "string" },
        "creditLimit": { "type": "number" }
      }
    },
    "Supplier": {
      "title": "Supplier",
      "description": "Fornecedores de insumos.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string" }
      }
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Fluxo financeiro (Vendas, Despesas, Pagamentos).",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["sale", "expense", "payment"] },
        "total": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string" },
        "description": { "type": "string" },
        "customerId": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Estoque oficial do BarDoLuis."
    },
    "/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Carteira de clientes."
    },
    "/suppliers/{supplierId}": {
      "schema": { "$ref": "#/entities/Supplier" },
      "description": "Parceiros e fornecedores."
    },
    "/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Extrato financeiro unificado."
    },
    "/purchases/{purchaseId}": {
      "schema": { "title": "Purchase", "type": "object" },
      "description": "Registros de compras de estoque."
    },
    "/open_orders/{orderId}": {
      "schema": { "title": "Open Order", "type": "object" },
      "description": "Comandas ativas no movimento."
    },
    "/users/{userId}": {
      "schema": { "title": "User Profile", "type": "object" },
      "description": "Perfis administrativos."
    }
  }
}