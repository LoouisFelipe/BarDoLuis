
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGRA DE OURO: CEO possui acesso total irrestrito (Bypass de Auditoria)
    // UID do Proprietário: o0FzqC1oYoYYwjgJXbbgL4QoCe42
    function isCEO() {
      return request.auth != null && request.auth.uid == "o0FzqC1oYoYYwjgJXbbgL4QoCe42";
    }

    function isStaff() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isStaff() && (isCEO() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // CEO Bypass para qualquer operação em qualquer banco do projeto
    match /{document=**} {
      allow read, write: if isCEO();
    }

    // Regras específicas para Staff
    match /users/{userId} {
      allow read: if isStaff();
      allow create, delete: if isCEO();
      allow update: if isCEO() || request.auth.uid == userId;
    }

    match /products/{productId} {
      allow read: if isStaff(); 
      allow write: if isStaff(); 
    }

    match /customers/{customerId} {
      allow read, write: if isStaff();
    }

    match /transactions/{transactionId} {
      allow read, write: if isStaff();
    }

    match /open_orders/{orderId} {
      allow read, create, update: if isStaff();
      allow delete: if isAdmin();
    }
  }
}
