rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BARDOLUIS SECURITY RULES DOCUMENTATION
     *
     * Core Philosophy:
     * Access to business data is gated by the existence of a document in the /users collection 
     * matching the user's authenticated UID.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAppUser() {
      // CEO: Sincronizado com a coleção definitiva /users
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function canManageBusinessData() {
      return isSignedIn() && isAppUser();
    }

    // --- Collection Rules ---

    match /users/{uid} {
      allow get: if isSignedIn() && isOwner(uid);
      allow list: if canManageBusinessData();
      allow create: if isSignedIn() && isOwner(uid);
      allow update, delete: if canManageBusinessData();
    }

    match /suppliers/{supplierId} {
      allow read, write: if canManageBusinessData();
    }

    match /products/{productId} {
      allow read, write: if canManageBusinessData();
    }

    match /game_modalities/{modalityId} {
      allow read, write: if canManageBusinessData();
    }

    match /customers/{customerId} {
      allow read, write: if canManageBusinessData();
    }

    match /open_orders/{orderId} {
      allow read, write: if canManageBusinessData();
    }

    match /transactions/{transactionId} {
      allow read, write: if canManageBusinessData();
    }

    match /recurring_expenses/{expenseId} {
      allow read, write: if canManageBusinessData();
    }

    match /purchases/{purchaseId} {
      allow read, write: if canManageBusinessData();
    }

    match /_diagnostics/{docId} {
      allow write: if isSignedIn();
      allow read: if canManageBusinessData();
    }
  }
}